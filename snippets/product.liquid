<div class="product">  
    <img src="{{ product.featured_image | img_url: "large" }}" alt="">
    {% if product.title == "CREAM COOKIE PROTEIN"%}
      <p  class="product-title" style="color: #2298c9; ">{{ product.title }}</p>
        {% elsif product.title == "CHOCOLATE SPREAD" %}
          <p  class="product-title" style="color: #edbc1f; ">{{ product.title }}</p>
        {% elsif product.title == "STRAWBERRY TART" %}
            <p  class="product-title" style="color: #E53935; ">{{ product.title }}</p>
        {% elsif product.title == "CARAMELIZED BISCUITS" %}
              <p  class="product-title" style="color: #f90; ">{{ product.title }}</p>
        {% elsif product.title == "DATES & MILK" %}
                <p  class="product-title" style="color: #8121d8; ">{{ product.title }}</p>
        {% elsif product.title == "WHEY - SOBIA" %}
                  <p  class="product-title" style="color: #3ba9b2; ">{{ product.title }}</p>
    {% endif %}
    <span style="color: #FF4C01; ">{{ product.vendor }}</span>
    
    <p class="price">{{ product.price |  money }}</p>
  
</div>



<style>
  .product{
    width: 250px;
    height: 350px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: #fff;
    border: 4px solid #FF4C01;
    border-radius: 15px;
    gap: 10px;
    transition: all 0.4s;
  }

  .product img{
    width: 210px;
  }
  .product-title{
    font-size: 20px;
  }
  .price{
    color: black;
    font-size: 20px;
  }


  @media screen and (max-width: 500px) {
  
  .product{
    width: 180px;
    height: 300px;
  
    gap: 10px;

  }

  .product img{
    width: 160px;
  }
  .product-title{
    font-size: 15px;
  }

  }
  

</style>