<div style="background-color: #fff6e7;">
    
    {% render "header" %}
    <div class="all-collection">
      
        <h1>ALL COLLECTION</h1>
        <div class="collection">
          {% for product in collection.products %}
            <a href="{{ product.url  }}">
              {% render 'product', product: product %}
            </a>
          {% endfor %}
        </div>
    </div>
</div>

<style>
  .all-collection{
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: #fff6e7;
  }
  .all-collection h1{
    color: #FF4C01;
    font-size: 70px;
    margin-top: 40px;
  }
  .collection{
    width: 80%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 40px;
    margin-top: 40px;
    margin-bottom: 20px;
  }
  .collection a{
    text-decoration: none;
  }


  @media screen and (max-width: 1050px) {
    .collection{
      width: 100%;
    }
    
  }

  @media screen and (max-width: 500px) {
  .all-collection h1{
    font-size: 40px;
  }
  }
  @media screen and (max-width:400px){
      .collection{
      width: 100%;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
      padding: 10px ;
    }
  }
  
  

  

</style>