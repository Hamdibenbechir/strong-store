<div class="contact">
  {% render "header" %}
  <div class="contact-form">
    <h1 class="heyy">CONTACT US</h1>
    {% form 'contact' %}
      {{ form.errors | default_errors }}
    
      <div class="first-name">
        <label for="first-name">First name</label>
        <input placeholder="Hamdi Ben Bechir" type="text" name="contact[first_name]" id="first-name" />
      </div>
    
    
      <div class="email-contact">
        <label for="email">Email</label>
        <input placeholder="Email@Email.com" type="email" name="contact[email]" id="email" />
      </div>
    
      <div class="message">
        <label for="message">Message</label>
        <textarea placeholder="Your Message" name="contact[body]" id="message"></textarea>
      </div>
    
      <div class="submit">
        <input class="sub-me" type="submit" value="Create" />
      </div>
    {% endform %}
  </div>
</div>


<style>

.contact-form{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  gap: 20px;
  margin-top: 30px;
  margin-bottom: 30px;
  
}
.heyy{
  color: #FF4C01;
  font-size: 70px;
  margin-top: 20px;
}

.contact-form div{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  gap: 10px;

}
.contact-form label{
  font-size: 40px;
  color: #FF4C01;
}
input{
  height: 50px;
  width: 400px;
  font-size: 30px;
  color: #FF4C01;
}
textarea{
  height: 100px;
  width: 400px;
  font-size: 25px;
  color: #FF4C01;
}
.sub-me{
  border-radius: 20px;
  border: 2px solid #FF4C01;
  cursor: pointer;
}



@media  (max-width:500px) {
  .contact-form{

  gap: 20px;

  
}


.contact-form label{
  font-size: 30px;
  
}
input{
  height: 40px;
  width: 300px;
  font-size: 20px;
  
}
textarea{
  height: 80px;
  width: 300px;
  font-size: 25px;

}
.heyy{
  font-size: 50px;
}

}
</style>